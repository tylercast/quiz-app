<div class="card mx-auto mt-5 p-4 shadow" style="max-width: 500px;">
  <h2 class="text-center mb-4">Welcome to the Online Quiz</h2>
  <form id="start-form">
    <div class="mb-3">
      <input type="text" id="student-name" class="form-control" placeholder="Enter your name" required>
    </div>
    <div class="mb-3">
      <select id="quiz-select" class="form-select" required>
        <option value="">Select a quiz</option>
        <option value="javascript">JavaScript Quiz</option>
        <option value="python">Python Quiz</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary w-100">Start Quiz</button>
  </form>
</div>
