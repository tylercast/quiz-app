<div class="card mt-4 p-4 shadow">
  <div class="d-flex justify-content-between">
    <span>Score: {{score}}/{{total}}</span>
    <span>Time: {{time}} sec</span>
  </div>

  <h4 class="mt-3 mb-3">{{question}}</h4>

  <form class="answer-form" data-correct="{{answer}}" data-feedback="{{feedback}}">
    {{#ifEquals type "mcq"}}
      {{#each options}}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="answer" value="{{this}}" required>
          <label class="form-check-label">{{this}}</label>
        </div>
      {{/each}}

    {{else ifEquals type "text"}}
      <input type="text" name="answer" class="form-control mb-3" placeholder="Type your answer..." required>

    {{else ifEquals type "image"}}
      <div class="row">
        {{#each options}}
          <div class="col-6 col-md-3 text-center">
            <input type="radio" name="answer" id="img-{{@index}}" value="{{this.label}}" hidden required>
            <label for="img-{{@index}}">
              <img src="{{this.image}}" class="img-fluid rounded border" />
              <div>{{this.label}}</div>
            </label>
          </div>
        {{/each}}
      </div>
    {{/ifEquals}}

    <button type="submit" class="btn btn-success mt-3">Submit</button>
  </form>
</div>
